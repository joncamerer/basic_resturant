Form for creating/editin menu items

<%= form_for @menu_item, url: {action: "create"} do |f| %>
  <div class="form-group">
    <%= f.label :category %>
    <%= f.select :category, ['Appetizer', 'Salad/Soup', 'Pizza', 'Pasta', 'Sandwiches', 'Desert'], class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, autocomplete: "off", class: 'form-control' %> 
  </div>
  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, autocomplete: "off", class: 'form-control' %>
  </div> 
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="actions form-group">
    <%= f.submit 'Submit', class: 'btn btn-default' %>
  </div>
<% end %>